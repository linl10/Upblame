#include "stdio.h"
#define Stack_size 30
typedef struct			//理解：SeqStack将可以代替整个结构体类型
{
	int elem[Stack_size];   
	int top;  
}SeqStack;


void InitStack(SeqStack *s)   //初始化：将顶栈制空（赋值为零或-1）
{
	s->top=-1;
}


int Push(SeqStack *s,int x)		//入栈函数
{
	if(s->top==Stack_size-1)   //判断栈满，满则推出程序
		return(0);
       1       
        2       
	return(1);
}


int Pop(SeqStack *s,int *x)
{
	if (s->top==-1)		//判断空栈，是返回零推出程序
		return 0;
	else
		*x=s->elem[s->top];  
          3      
	return(1);
}


int IsEmpty(SeqStack s)		//判断空操作，是返回0，否返回1
{
	if(       4     )
	return 1;
	else return  0; 
}


void Conversion(int N)
{
	SeqStack S;  
	int x;   
	InitStack(&S);
	while(N>0)
	{
		x=N%2;  
		Push(&S,x); 
		N=N/2; }
		while(!IsEmpty(S))
	{	
		Pop(&S,&x);  
		printf("%d",x); 
	}
}


void main()
{  
	int x; //X为待转换的十进制数
	printf("Enter a number:");
	scanf("%d",&x);
	Conversion(x); //把X转换成二进制
}
